%body.search
  .search-index
    %h2.search-word 
      -if @searchword.present?
        = "#{@searchword}の検索"
      -else
        = "新着商品"      
    %p.search-count 
      -if @searchword.present?
        ="#{@products_search.count}件表示"
    .search-item-content
      - @products_search.each do |product|
        .search_item-body
          .item-box-body
            %prefix.item-box-photo
              = link_to product_path(product) do
                = image_tag product.images[0][:image],class: "item-image"
            .item-box-detail
              %h3.item-box-name
                = product[:name]
                                       
= paginate(@products_search)
