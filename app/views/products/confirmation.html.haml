.wrapper
  .main-pcsection
    .main-pcsection__heading
      %h2.main-pcsection__heading-name 購入内容の確認
    .main-pcsection__content
      .main-pcsection__content--product
        = image_tag @product.images[0].image.url,class: "image"
        %p.name
          = @product.name
        %form.buy_form
          %p.price
            = "¥#{@product.price.to_i.to_s(:delimited)}"
            %span
              = @product.cost_bearer
          .point
            ポイントはありません
          .price-row
            .price-cell
              支払い金額
            .price-cell
              %span
                = "¥#{@product.price.to_i.to_s(:delimited)}"
          = link_to "購入する", {controller: "products", action: "buy"}, {method: :post, class: "red-submit-btn"}          
            
    .main-pcsection__content
      .main-pcsection__content--address
        %h3
          配送先
        .address-detail
          〒532-0003 
          %br
          大阪府 大阪市なんば なんば19-19-19 skyo 
          %br
          川崎 雄太
          %br
            = link_to '変更する ＞', "#", class: "blue-link"

    .main-pcsection__content
      .main-pcsection__content--payment
        %h3
          支払い方法
        .payment-detail

        - if @default_card_information.blank?
          %br /
          = link_to '変更する ＞', "#", class: "blue-link"
        - else
          -#以下カード情報を表示
          = "**** **** **** " + @default_card_information.last4
          %br
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
          %br
          =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2394192159",width: "49", height: "15"
          %br
            = link_to '変更する ＞', "#", class: "blue-link"
