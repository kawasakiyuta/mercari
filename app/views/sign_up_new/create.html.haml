.display
  %header.header-box-registration
    %h1
      =link_to "https://www.mercari.com/jp/" do
        =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863303983"
    %nav.progress-bar.sign-up-bar
      %ol.clearfix
        %li
          会員情報
          .progress-line--first
        %li
          電話番号認証
          .progress-line--second
        %li
          お届け先住所入力
          .progress-line--third
        %li
          支払い方法
          .progress-line--forth
        %li.bar-name
          完了
          .progress-line--fifth--end
  %main.contents
    %section.contents__panel
      %h2.contents-name 会員登録完了
      .contents-box.create
        .contents-form
          %p ありがとうございます。
          %p 会員登録が完了しました。
        .form__create
          .next-enter
            =link_to "メルカリをはじめる", new_user_session_path, class: "enter-btn"
        .banner-picture
          -# =image_tag ""
          .banner-text
            %h3 \ スマホでかんたんフリマアプリ /
            %p 今すぐ無料ダウンロード！
          .banner-icon
            =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/mercari_icon.png?615905397"
          .banner-app
            =link_to "https://itunes.apple.com/jp/app/id667861049?l=ja&mt=8" do
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/app-store.svg?615905397"
          .banner-google
            =link_to "https://play.google.com/store/apps/details?id=com.kouzoh.mercari&hl=ja" do
              =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/google-play.svg?615905397"
  %footer.footer-box
    .footer__panel
      .footer-overview
        =link_to "https://www.mercari.com/jp/privacy/", class: "footer-overview__1" do
          プライバシーポリシー
        =link_to "https://www.mercari.com/jp/tos/", class: "footer-overview__2" do
          メルカリ利用規約
        =link_to "https://www.mercari.com/jp/tokutei/", class: "footer-overview__3" do
          特定商取引に関する表記
      .footer__box
        =link_to "https://www.mercari.com/jp/", class: "footer__footer-logo" do
          =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?863303983"
      .footer__name
        ©︎2019 Mercari
