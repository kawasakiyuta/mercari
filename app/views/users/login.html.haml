%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    %br/
    = f.password_field :password, autocomplete: "current-password"
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit "Log in"
= render "devise/shared/links"



.display
  %header.header-box
    %h1
      =link_to "https://www.mercari.com/jp/" do
        =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?863303983"
  %main.contents
    %section.contents__panel
      .login-name
        %p アカウントをお持ちでない方はこちら
        .no-account
          =link_to "https://www.mercari.com/jp/signup/", class: "no-account__btn no-account__btn--registration" do
            新規会員登録
      .login-box
        .login-form
          =link_to "https://www.facebook.com/login/", class: "login-form__btn login-form__btn--facebook" do
            =fa_icon 'facebook', class: "login-form__btn--icon"
            Facebookでログイン
          =link_to "https://accounts.google.com/signin/", class: "login-form__btn login-form__btn--google" do
            =fa_icon 'google', class: "login-form__btn--icon"
            Googleでログイン
      .form
        %input.login-mail{name: "emial", type: "email", placeholder: "  メールアドレス"}
        %input.login-pass{name: "password", type: " string", placeholder: "  パスワード"}
        .login-captcha
          ☑︎reCAPCHA(私はロボットではありません)
        .login-enter
          =link_to "ログイン", new_user_session_path, class: "enter-btn"
        .forget-pass
          =link_to "https://www.mercari.com/jp/password/reset/start/", class: "forget-pass__btn" do
            パスワードをお忘れの方
  %footer.footer-box
    .footer__panel
      .footer__overview
        =link_to "https://www.mercari.com/jp/privacy/", class: "footer-overview__1" do
          プライバシーポリシー
        =link_to "https://www.mercari.com/jp/tos/", class: "footer-overview__2" do
          メルカリ利用規約
        =link_to "https://www.mercari.com/jp/tokutei/", class: "footer-overview__3" do
          特定商取引に関する表記
      .footer__box
        =link_to "https://www.mercari.com/jp/", class: "footer__footser-logo" do
          =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?863303983"
      .footer__name
        ©2019 Mercari
