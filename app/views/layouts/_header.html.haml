%header.content
  .content-inner
    .content__head
      %h1
      =image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2098311808",size: "134x36"
      %form.content__head--form
        %input.content__head--form-search{name: "keyword",placeholder: "何かお探しですか？",type: "search",value: ""}/
        %i.icon-search
          %i.fa.fa-search

    .content__foot
      .content__foot--left
        %ul
          %li.mega-menu-left
            .category-list
              .category-list-parent
                =link_to ""
                %i.fa.fa-list-ul
                %span カテゴリーから探す

          %li.mega-menu-left
            .brand-list
              .brand-list-parent
                =link_to ""
                %i.fa.fa-tag
                %span ブランドから探す
            
      .content__foot--right
        %ul
          %li.mega-menu-right
            .mega-menu-right__item
              =link_to ""
              %i.fa.fa-heart
              %span いいね！一覧

          %li.mega-menu-right
            .mega-menu-right__item
              =link_to ""
              %i.fa.fa-bell
              %span お知らせ
              .mega-menu-right_count
            %ul.pc-header-user-box.pc-header-notification-box.mypage-item-list{"data-id" => "pc-header-user-items"} 

          %li.mega-menu-right
            .mega-menu-right__item
              =link_to ""
              %i.fa.fa-check
              %span やることリスト

          %li.mega-menu-right
            .mega-menu-right__item
              =link_to ""
              =image_tag ""
              %span マイページ