- breadcrumb :card
= breadcrumbs separator: " &rsaquo; "
%main.card-container
  =render '/layouts/side__nav'
  .content-credit
    %section.content-credit
      %h2.content-credit-title クレジットカード情報入力
      .content__inner-body
        .content__inner-body--form
          = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .form-group
              %label カード番号
              %span.form-require 必須
              %input.input-default{name: "number", type: "string", placeholder: "  半角英数字のみ", id: "cardnumber"}
                .credit-card
                  %li
                    =image_tag "http://manual.estore.co.jp/shared/mg_sozai/card_visa_b.gif"
                  %li
                    =image_tag "http://manual.estore.co.jp/shared/mg_sozai/card_master_b.gif"
                  %li  
                    =image_tag "http://manual.estore.co.jp/shared/mg_sozai/card_jcb_b.gif"
                  %li
                    =image_tag "http://manual.estore.co.jp/shared/mg_sozai/card_amex_b.gif"
                  %li
                    =image_tag "http://manual.estore.co.jp/shared/mg_sozai/card_diners_b.gif"
                  %li
                    =image_tag "http://manual.estore.co.jp/shared/mg_sozai/card_nicos_b.gif"
            .form-group
              %label 有効期限
              %span.form-require 必須
              .contents-form__expiration-date
                .expiration-date-select.select-month
                  %select.select-default#exp_month{name: "exp_month"}
                    %option{value: "01"} 01
                    %option{value: "02"} 02
                    %option{value: "03"} 03
                    %option{value: "04"} 04
                    %option{value: "05"} 05
                    %option{value: "06"} 06
                    %option{value: "07"} 07
                    %option{value: "08"} 08
                    %option{value: "09"} 09
                    %option{value: "10"} 10
                    %option{value: "11"} 11
                    %option{value: "12"} 12
                  %i.fa.fa-chevron-down
                  %span.date 月
                .expiration-date-select.select-year
                  %select.select-default#exp_year{name: "exp_year"}
                    %option{value: "2019"} 19
                    %option{value: "2020"} 20
                    %option{value: "2021"} 21
                    %option{value: "2022"} 22
                    %option{value: "2023"} 23
                    %option{value: "2024"} 24
                    %option{value: "2025"} 25
                    %option{value: "2026"} 26
                    %option{value: "2027"} 27
                    %option{value: "2028"} 28
                    %option{value: "2029"} 29
                  %i.fa.fa-chevron-down
                  %span.date 年
            .form-group
              %label セキュリティコード
              %span.form-require 必須
              %input.input-default{name: "cvc", type: "string", class: "cvc", id:"cvc", placeholder: "  カード背面4桁もしくは3桁の番号", maxlength: "4"}
              .description
                .description-text
                  %input#toggle-checkbox{:type => "checkbox"}/
                  %i.fa.fa-question-circle
                  %label.toggle-button{:for => "toggle-checkbox"} カード裏面の番号とは？
                  .toggle-content
                    カードの裏面をご参照ください。
                    %br/
                    = image_tag "seq-card.png", width: "240"
              .credit-cards__addition-btn
                -# = link_to "", class: "add-btn", method: :get do
                #card_token
                  = submit_tag "追加する", id: "token_submit"