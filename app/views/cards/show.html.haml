%main.container
  =render '/layouts/side__nav'
  .content-credit
    %section.content-credit
      %h2.content-credit-title 支払い方法
      .content__inner
        .content__inner-head
          .content__inner-head--name
            %h3.head-name クレジットカード一覧
          %ul.credit-cards__list
            %li
              %form.credit-cards
                %figure.credit-cards
                  =image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?615905397",alt: "visa", size: "49x15"
                .credit-card-num
                  = "**** **** ****" + @default_card_information.last4
                .credit-card-num
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                  = exp_month + " / " + exp_year
                -# = link_to delete_cards_path, method: :delete, class:"credit-card__remove" do
                = form_tag(delete_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
                  %button{type: "submit",class:"credit-card__remove"}削除する

        .content__inner-foot
          =link_to "支払い方法について", "#", target: "_blank", class: "foot-name"
          %i.fa.fa-angle-right
